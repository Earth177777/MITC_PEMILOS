# Production Environment Variables
# This file contains production-ready configurations for VPS deployment

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
DATABASE_PATH=/app/db/electronic_voting_system.sqlite
DATABASE_LOGGING=false

# Security Configuration (CHANGE THESE VALUES!)
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_32_CHARS_MIN
JWT_EXPIRES_IN=1h
# Generate password hash using bcrypt with salt rounds 12
# Use: docker exec -it election-backend node -e "console.log(require('bcrypt').hashSync('your_admin_password', 10))"
ADMIN_PASSWORD_HASH=CHANGE_THIS_TO_YOUR_BCRYPT_HASHED_PASSWORD
# Generate 32-character encryption key: openssl rand -hex 16
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHARACTER_ENCRYPTION_KEY

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# CORS Configuration (Update with your domain)
ALLOWED_ORIGINS=https://voting.yourdomain.com

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs/app.log

# Session Configuration
# Generate session secret: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_SESSION_SECRET
SESSION_MAX_AGE=3600000

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: https:;"

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Health Check
HEALTH_CHECK_ENABLED=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9084